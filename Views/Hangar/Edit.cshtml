@model Proyecto_PrimerParcial.ViewModels.HangarEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Hangar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HangarId" />
            <div class="form-group">
                <label asp-for="HangarNombre" class="control-label"></label>
                <input asp-for="HangarNombre" class="form-control" />
                <span asp-validation-for="HangarNombre" class="text-danger"></span>
            </div>
            <label asp-for="HangarSector" class="control-label"></label>
            <select asp-for="HangarSector" class="form-control">
            <option value="0">Norte</option>
            <option value="1">Sur</option>
            <option value="2">Este</option>
            <option value="3">Oeste</option>
            </select>  
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HangarAptoMantenimiento" /> @Html.DisplayNameFor(model => model.HangarAptoMantenimiento)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HangarOficinas" /> @Html.DisplayNameFor(model => model.HangarOficinas)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
